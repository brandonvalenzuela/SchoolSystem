@page "/padres"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@inject PadreService PadreService
@inject UiService UiService
@inject ToastService ToastService
@attribute [Authorize]

<PageTitle>Padres de Familia</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Padres de Familia</h1>
    <a href="padres/crear" class="btn btn-primary">
        <i class="oi oi-plus"></i> Nuevo Padre
    </a>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary"></div>
    </div>
}
else if (padres == null || !padres.Any())
{
    <div class="alert alert-info">No hay padres registrados.</div>
}
else
{
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Hijos</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in padres)
                {
                    <tr>
                        <td>
                            <div class="fw-bold">@item.NombreCompleto</div>
                            <small class="text-muted">@item.Ocupacion</small>
                        </td>
                        <td>@item.Email</td>
                        <td>@item.Telefono</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.CantidadHijos</span>
                        </td>
                        <td>
                            @if (item.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="padres/editar/@item.Id" class="btn btn-sm btn-outline-info me-1" title="Editar">
                                ✏️
                            </a>
                            <!-- Puedes agregar botón de eliminar si lo deseas -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <div class="mt-3 d-flex justify-content-between">
        <span class="text-muted">Página @currentPage de @totalPages</span>
        <div>
            <button class="btn btn-outline-secondary btn-sm" disabled="@(!hasPrevious)" @onclick="() => Cargar(currentPage - 1)">Anterior</button>
            <button class="btn btn-outline-secondary btn-sm" disabled="@(!hasNext)" @onclick="() => Cargar(currentPage + 1)">Siguiente</button>
        </div>
    </div>
}

@code {
    private List<PadreDto> padres;
    private bool isLoading = true;
    private int currentPage = 1, totalPages = 0;
    private bool hasPrevious, hasNext;

    protected override async Task OnInitializedAsync()
    {
        if (UiService.HasMessage)
            ToastService.ShowSuccess(UiService.GetSuccessMessage());
        await Cargar(1);
    }

    private async Task Cargar(int page)
    {
        isLoading = true;
        var res = await PadreService.GetPadresAsync(page, 10);

        if (res.Succeeded)
        {
            padres = res.Data.Items.ToList();
            currentPage = res.Data.PageNumber;
            totalPages = res.Data.TotalPages;
            hasPrevious = res.Data.HasPreviousPage;
            hasNext = res.Data.HasNextPage;
        }
        else
        {
            ToastService.ShowError(res.Message);
        }
        isLoading = false;
    }
}