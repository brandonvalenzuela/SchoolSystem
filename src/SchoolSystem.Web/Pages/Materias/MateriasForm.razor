@page "/materias/crear"
@page "/materias/editar/{Id:int}"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@using MudBlazor
@inject MateriaService MateriaService
@inject NavigationManager Navigation
@inject ToastService ToastService
@attribute [Authorize]

<div class="container mt-4 mb-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@(Id == 0 ? "Nueva Materia" : "Editar Materia")</h4>
            <a href="materias" class="btn btn-outline-light btn-sm">Volver</a>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary"></div>
                    <p>Cargando información...</p>
                </div>
            }
            else
            {
                <EditForm Model="@modelo" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <div class="row g-3">
                        <!-- Clave -->
                        <div class="col-md-3">
                            <label class="form-label">Clave *</label>
                            <InputText class="form-control" @bind-Value="modelo.Clave" placeholder="Ej: MAT-101" />
                            <ValidationMessage For="@(() => modelo.Clave)" />
                        </div>

                        <!-- Nombre -->
                        <div class="col-md-6">
                            <label class="form-label">Nombre de la Materia *</label>
                            <InputText class="form-control" @bind-Value="modelo.Nombre" />
                            <ValidationMessage For="@(() => modelo.Nombre)" />
                        </div>

                        <!-- ColorHex (Opcional) con Color Picker -->
                        <div class="col-12">
                            <label class="form-label">Color de la Materia</label>

                            <!-- Paleta de colores sugeridos -->
                            <div class="mb-2">
                                <small class="form-text text-muted d-block mb-2">Colores sugeridos:</small>
                                <div class="d-flex flex-wrap gap-2" style="align-content: flex-start;">
                                    @foreach (var color in GetColoresSugeridos())
                                    {
                                        <button type="button" 
                                                class="btn btn-sm"
                                                style="
                                                    width: 40px;
                                                    height: 40px;
                                                    padding: 0;
                                                    border-radius: 4px;
                                                    background-color: @color;
                                                    border: @(modelo.ColorHex == color ? "3px solid #333" : "2px solid #ddd");
                                                    cursor: pointer;
                                                    transition: all 0.2s;
                                                    flex-shrink: 0;
                                                "
                                                title="@color"
                                                @onclick="() => SelectColorSugerido(color)">
                                        </button>
                                    }
                                </div>
                            </div>

                            <!-- Color Picker Manual + Hex Text -->
                            <div class="d-flex align-items-center gap-2">
                                <!-- Input Color (visual picker) -->
                                <input type="color" 
                                       class="form-control form-control-color flex-shrink-0" 
                                       style="width: 50px; height: 40px;"
                                       @bind="modelo.ColorHex" />

                                <!-- Input Hex Text -->
                                <InputText class="form-control" 
                                           @bind-Value="modelo.ColorHex" 
                                           placeholder="#FF5733" />
                            </div>
                            <small class="form-text text-muted d-block mt-1">
                                O escribe manualmente el color en formato #RGB o #RRGGBB (ej: #FF5 o #FF5733)
                            </small>
                            <ValidationMessage For="@(() => modelo.ColorHex)" style="color: #dc3545;" />

                            <!-- Preview del Color -->
                            @if (!string.IsNullOrWhiteSpace(modelo.ColorHex))
                            {
                                <div style="margin-top: 8px; padding: 8px; border-radius: 4px; background-color: @GetValidColorOrDefault(modelo.ColorHex); height: 30px; display: flex; align-items: center; justify-content: center;">
                                    <small style="color: white; font-weight: bold; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">@modelo.ColorHex</small>
                                </div>
                            }
                            else
                            {
                                <div style="margin-top: 8px; padding: 8px; border-radius: 4px; background-color: #9E9E9E; height: 30px; display: flex; align-items: center; justify-content: center;">
                                    <small style="color: white; font-weight: bold; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">#9E9E9E (por defecto)</small>
                                </div>
                            }
                        </div>

                        <!-- Descripción (Multiline) -->
                        <div class="col-12">
                            <label class="form-label">Descripción</label>
                            <InputTextArea class="form-control" 
                                          @bind-Value="modelo.Descripcion" 
                                          rows="4"
                                          placeholder="Describe brevemente el contenido y objetivos de esta materia..."
                                          maxlength="1000" />
                            <small class="form-text text-muted d-block mt-1">
                                @(string.IsNullOrWhiteSpace(modelo.Descripcion) ? "0" : modelo.Descripcion.Length) / 1000 caracteres
                            </small>
                            <ValidationMessage For="@(() => modelo.Descripcion)" />
                        </div>

                        <!-- Área Académica -->
                        <div class="col-md-6">
                            <label class="form-label">Área Académica *</label>
                            <InputSelect class="form-select" @bind-Value="modelo.Area">
                                <option value="1">Ciencias Exactas</option>
                                <option value="2">Ciencias Naturales</option>
                                <option value="3">Humanidades</option>
                                <option value="4">Ciencias Sociales</option>
                                <option value="5">Artes</option>
                                <option value="6">Educación Física</option>
                                <option value="7">Idiomas</option>
                                <option value="8">Tecnología</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => modelo.Area)" />
                        </div>

                        <!-- Tipo -->
                        <div class="col-md-6">
                            <label class="form-label">Tipo *</label>
                            <InputSelect class="form-select" @bind-Value="modelo.Tipo">
                                <option value="1">Teórica</option>
                                <option value="2">Práctica</option>
                                <option value="3">Taller</option>
                                <option value="4">Laboratorio</option>
                                <option value="5">Extracurricular</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => modelo.Tipo)" />
                        </div>
                        <div class="col-12">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h6 class="card-title">Configuración Adicional</h6>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-check form-switch">
                                                <InputCheckbox class="form-check-input" @bind-Value="modelo.Activo" id="chkActivo" />
                                                <label class="form-check-label" for="chkActivo">Materia Activa</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-check form-switch">
                                                <InputCheckbox class="form-check-input" @bind-Value="modelo.RequiereMateriales" id="chkMat" />
                                                <label class="form-check-label" for="chkMat">Requiere Materiales</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-check form-switch">
                                                <InputCheckbox class="form-check-input" @bind-Value="modelo.RequiereInstalacionesEspeciales" id="chkInst" />
                                                <label class="form-check-label" for="chkInst">Instalaciones Especiales</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (modelo.RequiereMateriales)
                        {
                            <div class="col-12">
                                <label class="form-label">Lista de Materiales</label>
                                <InputText class="form-control" @bind-Value="modelo.MaterialesRequeridos" placeholder="Ej: Calculadora, Bata de laboratorio..." />
                            </div>
                        }

                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-success px-4" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm"></span> <span>Guardando...</span>
                            }
                            else
                            {
                                <span><i class="oi oi-check"></i> Guardar</span>
                            }
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private CreateMateriaDto modelo = new CreateMateriaDto { ColorHex = "#3B82F6", Area = 1, Tipo = 1 }; // Valores por defecto
    private bool isLoading = false;
    private bool isSubmitting = false;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            await CargarParaEditar();
        }
    }

    private async Task CargarParaEditar()
    {
        isLoading = true;
        var res = await MateriaService.GetByIdAsync(Id);
        if (res.Succeeded)
        {
            var m = res.Data;
            // Mapeo manual
            modelo.Nombre = m.Nombre;
            modelo.Clave = m.Clave;
            modelo.Activo = m.Activo;
            // Nota: Aquí tendrías que mapear el String que devuelve el DTO (ej: "Ciencias") 
            // de vuelta al entero del Enum (ej: 1) si tu API devuelve strings.
            // Si la API devuelve ints, es directo. 
            // Para simplificar, asumiremos que al editar, el usuario reselecciona si no coincide.
            
            // Si tu DTO de lectura trae más campos, asígnalos aquí:
            // modelo.Descripcion = m.Descripcion;
            // modelo.Color = m.Color;
        }
        else
        {
            ToastService.ShowError(res.Message);
        }
        isLoading = false;
    }

    private async Task Guardar()
    {
        isSubmitting = true;
        errorMessage = null;
        bool exito = false;

        try
        {
            if (Id == 0)
            {
                var response = await MateriaService.CreateAsync(modelo);
                exito = response.Succeeded;
                if (!exito) 
                    ToastService.ShowError(response.Message);
            }
            else
            {
                var updateDto = new UpdateMateriaDto
                {
                    Id = this.Id,
                    Nombre = modelo.Nombre,
                    Clave = modelo.Clave,
                    Area = modelo.Area,
                    Tipo = modelo.Tipo,
                    Activo = modelo.Activo,
                    Descripcion = modelo.Descripcion,
                    ColorHex = modelo.ColorHex,
                    RequiereMateriales = modelo.RequiereMateriales,
                    MaterialesRequeridos = modelo.MaterialesRequeridos,
                    RequiereInstalacionesEspeciales = modelo.RequiereInstalacionesEspeciales,
                    InstalacionesRequeridas = modelo.InstalacionesRequeridas
                };
                
                var response = await MateriaService.UpdateAsync(Id, updateDto);
                exito = response.Succeeded;
                if (!exito) 
                    ToastService.ShowError(response.Message);
            }

            if (exito)
            {
                ToastService.ShowSuccess(Id == 0 ? "Materia creada." : "Materia actualizada.");
                Navigation.NavigateTo("materias");
            }
        }
        catch (Exception ex)
        {
                                    ToastService.ShowError("Error: " + ex.Message);
                                }
                                finally
                                {
                                    isSubmitting = false;
                                }
                            }

                                /// <summary>
                                /// Obtiene un color válido o fallback (#9E9E9E - gris neutral)
                                /// </summary>
                                private string GetValidColorOrDefault(string? colorHex)
                                {
                                    if (string.IsNullOrWhiteSpace(colorHex))
                                        return "#9E9E9E";

                                    // Validar formato #RGB o #RRGGBB
                                    if (System.Text.RegularExpressions.Regex.IsMatch(colorHex, @"^#([A-Fa-f0-9]{3}|[A-Fa-f0-9]{6})$"))
                                        return colorHex;

                                    return "#9E9E9E";
                                }

                                /// <summary>
                                /// Retorna paleta de colores sugeridos para materias
                                /// Seleccionados para ser visibles, profesionales y educativos
                                /// </summary>
                                private List<string> GetColoresSugeridos()
                                {
                                    return new List<string>
                                    {
                                        "#FF6B6B", // Rojo - Ciencias Sociales/Historia
                                        "#4ECDC4", // Turquesa - Ciencias Naturales
                                        "#45B7D1", // Azul - Matemáticas
                                        "#FFA502", // Naranja - Arte/Artes Plásticas
                                        "#95E1D3", // Verde Menta - Educación Física
                                        "#C7CEEA", // Lavanda - Idiomas
                                        "#B19CD9", // Púrpura - Tecnología
                                        "#FFD93D", // Amarillo - Educación/Tutoría
                                        "#6BCF7F", // Verde - Biología
                                        "#FF6B9D", // Rosa - Artes Escénicas
                                        "#A8E6CF", // Verde Pastel - Ecología
                                        "#FFD3B6"  // Peach - Diseño
                                    };
                                }

                                /// <summary>
                                /// Callback para seleccionar un color de la paleta sugerida
                                /// </summary>
                                private void SelectColorSugerido(string color)
                                {
                                    modelo.ColorHex = color;
                                }
                            }
