@page "/alumnos"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@attribute [Authorize]
@inject AlumnoService AlumnoService
@inject UiService UiService
@inject ToastService ToastService

<PageTitle>Alumnos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Listado de Alumnos</h1>
    <a href="alumnos/crear" class="btn btn-primary">
        <i class="oi oi-plus"></i> Nuevo Alumno
    </a>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (alumnos == null || !alumnos.Any())
{
    <div class="alert alert-info">No hay alumnos registrados.</div>
}
else
{
    <div class="table-responsive shadow-sm bg-white rounded">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Matrícula</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Estatus</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in alumnos)
                {
                    <tr>
                        <td>@alumno.Matricula</td>
                        <td>@alumno.NombreCompleto</td>
                        <td>@alumno.Email</td>
                        <td>
                            <span class="badge @ObtenerClaseEstatus(alumno.Estatus)">
                                @alumno.Estatus
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="alumnos/editar/@alumno.Id" class="btn btn-sm btn-outline-info me-1" title="Editar">
                                ✏️
                            </a>
                            <button class="btn btn-sm btn-outline-danger"
                                    title="Eliminar"
                                    @onclick="() => SolicitarEliminacion(alumno.Id, alumno.NombreCompleto)">
                                🗑️
                            </button>
                            <a href="alumnos/expediente/@alumno.Id" class="btn btn-sm btn-outline-danger me-1" title="Salud">
                                ❤️
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <span>Mostrando página @currentPage de @totalPages</span>
        <div>
            <button class="btn btn-outline-secondary btn-sm"
                    disabled="@(!hasPrevious)"
                    @onclick="() => CargarAlumnos(currentPage - 1)">
                Anterior
            </button>
            <button class="btn btn-outline-secondary btn-sm"
                    disabled="@(!hasNext)"
                    @onclick="() => CargarAlumnos(currentPage + 1)">
                Siguiente
            </button>
        </div>
    </div>
}

<SchoolSystem.Web.Shared.ConfirmacionModal @ref="modalEliminar"
                                           Titulo="Eliminar Alumno"
                                           Mensaje="@mensajeConfirmacion"
                                           OnConfirm="ConfirmarEliminacionReal" />

@code {
    private List<AlumnoDto> alumnos;
    private bool isLoading = true;
    private string errorMessage;

    // Variables de paginación
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 0;
    private bool hasPrevious;
    private bool hasNext;
    private string? successMessage;
    private SchoolSystem.Web.Shared.ConfirmacionModal modalEliminar;
    private int idParaEliminar;
    private string mensajeConfirmacion;


    protected override async Task OnInitializedAsync()
    {

        if (UiService.HasMessage)
            ToastService.ShowSuccess(UiService.GetSuccessMessage());

        await CargarAlumnos(1);
    }

    private async Task CargarAlumnos(int page)
    {
        isLoading = true;
        try
        {
            var response = await AlumnoService.GetAlumnosAsync(page, pageSize);

            if (response.Succeeded)
            {
                alumnos = response.Data.Items.ToList();
                currentPage = response.Data.PageNumber;
                totalPages = response.Data.TotalPages;
                hasPrevious = response.Data.HasPreviousPage;
                hasNext = response.Data.HasNextPage;
                errorMessage = null;
            }
            else
            {
                 ToastService.ShowError(response.Message ?? "No se pudieron cargar los alumnos.");
            }
        }
        catch (Exception ex)
        {
             ToastService.ShowError("Error de conexión: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    // 1. Este método se llama al dar clic en el botón de la tabla (Basurero)
    private void SolicitarEliminacion(int id, string nombre)
    {
        // Guardamos el ID en memoria temporalmente
        idParaEliminar = id;

        // Configuramos el mensaje
        mensajeConfirmacion = $"¿Realmente deseas eliminar al alumno {nombre}? Esta acción no se puede deshacer.";

        // Mostramos el modal
        modalEliminar.Show();
    }

    // 2. Este método se ejecuta SOLO si el usuario da clic en "Eliminar" en el modal
    private async Task ConfirmarEliminacionReal()
    {
        isLoading = true;
        try
        {
            var response = await AlumnoService.DeleteAsync(idParaEliminar);

            if (response.Succeeded)
            {
                // Asigna el mensaje directamente a la variable que usa tu HTML.
                ToastService.ShowSuccess("Alumno eliminado correctamente.");

                // Recargar la tabla
                await CargarAlumnos(currentPage);
            }
            else
            {
                ToastService.ShowError(response.Message ?? "No se pudo eliminar.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private string ObtenerClaseEstatus(string estatus)
    {
        return estatus switch
        {
            "Activo" => "bg-success",
            "Baja" => "bg-danger",
            "Egresado" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}