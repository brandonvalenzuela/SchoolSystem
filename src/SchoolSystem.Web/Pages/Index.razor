@page "/"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@inject DashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Dashboard - SchoolSystem</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">Bienvenido, @userName</h1>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Cargando indicadores...</p>
        </div>
    }
    else if (stats != null)
    {
        <div class="row g-4 mb-4">
            <!-- Tarjeta: Alumnos -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0 border-start border-4 border-primary h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase mb-1">Alumnos Activos</h6>
                                <h2 class="mb-0 fw-bold">@stats.TotalAlumnos</h2>
                            </div>
                            <div class="fs-1 text-primary">
                                <i class="oi oi-people"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Maestros -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0 border-start border-4 border-info h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase mb-1">Maestros</h6>
                                <h2 class="mb-0 fw-bold">@stats.TotalMaestros</h2>
                            </div>
                            <div class="fs-1 text-info">
                                <i class="oi oi-briefcase"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Grupos -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0 border-start border-4 border-warning h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted text-uppercase mb-1">Grupos</h6>
                                <h2 class="mb-0 fw-bold">@stats.TotalGrupos</h2>
                            </div>
                            <div class="fs-1 text-warning">
                                <i class="oi oi-people"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mb-3 mt-5">Finanzas del Mes</h4>
        <div class="row g-4">
            <!-- Tarjeta: Ingresos -->
            <div class="col-md-6">
                <div class="card shadow border-0 bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-1">Ingresos (Mes Actual)</h6>
                                <h2 class="mb-0 fw-bold">$@stats.IngresosMesActual.ToString("N2")</h2>
                                <small>@stats.PagosRealizadosHoy pagos registrados hoy</small>
                            </div>
                            <div class="fs-1 text-white-50">
                                <i class="oi oi-dollar"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Pendiente -->
            <div class="col-md-6">
                <div class="card shadow border-0 bg-danger text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-1">Por Cobrar (Total)</h6>
                                <h2 class="mb-0 fw-bold">$@stats.CargosPendientesTotal.ToString("N2")</h2>
                                <small>Saldo pendiente total</small>
                            </div>
                            <div class="fs-1 text-white-50">
                                <i class="oi oi-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 text-center">
            <a href="caja" class="btn btn-outline-primary btn-lg px-5">Ir a Caja</a>
        </div>
    }
</div>

@code {
    private DashboardDto stats;
    private bool isLoading = true;
    private string userName;

    protected override async Task OnInitializedAsync()
    {
        // Obtener nombre del usuario
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        userName = state.User.Identity?.Name ?? "Usuario";

        try
        {
            var res = await DashboardService.GetStatsAsync();
            if (res.Succeeded)
            {
                stats = res.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}