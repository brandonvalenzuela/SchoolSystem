@page "/usuarios"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@inject UsuarioService UsuarioService
@inject UiService UiService
@inject ToastService ToastService
@attribute [Authorize]

<PageTitle>Usuarios del Sistema</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Usuarios del Sistema</h1>
    <a href="usuarios/crear" class="btn btn-primary">
        <i class="oi oi-plus"></i> Nuevo Usuario
    </a>
</div>

<!-- Alertas -->
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (isLoading)
{
    <div class="d-flex justify-content-center mt-5"><div class="spinner-border text-primary"></div></div>
}
else
{
    <div class="table-responsive shadow-sm bg-white rounded">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Rol</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in usuarios)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.NombreCompleto</td>
                        <td>
                            <span class="badge @ObtenerClaseRol(user.Rol)">@user.Rol</span>
                        </td>
                        <td><small>@user.Email</small></td>
                        <td>
                            @if (user.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <!-- Evitar editar/borrar al SuperAdmin -->
                            @if (user.Rol != "SuperAdmin")
                            {
                                <a href="usuarios/editar/@user.Id" class="btn btn-sm btn-outline-info me-1" title="Editar">✏️</a>
                                <button class="btn btn-sm btn-outline-danger" title="Eliminar"
                                        @onclick="() => SolicitarEliminacion(user.Id, user.NombreCompleto, user.Rol)">
                                    🗑️
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación simple -->
    <div class="mt-3">
        <button class="btn btn-outline-secondary btn-sm" disabled="@(!hasPrevious)" @onclick="() => Cargar(currentPage - 1)">Anterior</button>
        <span class="mx-2">Página @currentPage de @totalPages</span>
        <button class="btn btn-outline-secondary btn-sm" disabled="@(!hasNext)" @onclick="() => Cargar(currentPage + 1)">Siguiente</button>
    </div>
}

<SchoolSystem.Web.Shared.ConfirmacionModal @ref="modalEliminar"
                                           Titulo="Eliminar Usuario"
                                           Mensaje="@mensajeConfirmacion"
                                           OnConfirm="ConfirmarEliminacionReal" />

@code {
    private List<UsuarioDto> usuarios;
    private bool isLoading = true;
    private string errorMessage;
    private string successMessage;

    private int currentPage = 1;
    private int totalPages = 0;
    private bool hasPrevious, hasNext;

    private SchoolSystem.Web.Shared.ConfirmacionModal modalEliminar;
    private int idParaEliminar;
    private string mensajeConfirmacion;

    protected override async Task OnInitializedAsync()
    {
        if (UiService.HasMessage)
             ToastService.ShowSuccess(UiService.GetSuccessMessage());

        await Cargar(1);
    }

    private async Task Cargar(int page)
    {
        isLoading = true;
        var response = await UsuarioService.GetUsuariosAsync(page, 10);
        if (response.Succeeded)
        {
            usuarios = response.Data.Items.ToList();
            currentPage = response.Data.PageNumber;
            totalPages = response.Data.TotalPages;
            hasPrevious = response.Data.HasPreviousPage;
            hasNext = response.Data.HasNextPage;
        }
        else
        {
            errorMessage = response.Message;
        }
        isLoading = false;
    }

    private void SolicitarEliminacion(int id, string nombre, string rol)
    {
        idParaEliminar = id;
        mensajeConfirmacion = $"¿Estás seguro de eliminar al usuario {nombre} ({rol})?";
        // Advertencia visual extra
        if (rol == "Maestro" || rol == "Padre" || rol == "Alumno")
        {
            mensajeConfirmacion += " ⚠️ NOTA: Este usuario tiene un rol especializado. El sistema podría bloquear esta acción.";
        }
        modalEliminar.Show();
    }

    private async Task ConfirmarEliminacionReal()
    {
        // 1. Ocultar el modal
        modalEliminar.Ocultar();

        // 2. Mostrar spinner
        isLoading = true;
        errorMessage = null; // Limpiar errores previos
        StateHasChanged(); // Forzar render para mostrar spinner

        try
        {
            var response = await UsuarioService.DeleteAsync(idParaEliminar);

            if (response.Succeeded)
            {
                ToastService.ShowSuccess("Usuario eliminado correctamente.");
                await Cargar(currentPage);
            }
            else
            {
                // --- LÓGICA DE ERROR ROBUSTA ---

                // Opción A: Si hay una lista de errores (validaciones múltiples)
                if (response.Errors != null && response.Errors.Any())
                {
                    ToastService.ShowError(response.Errors.First());
                }
                // Opción B: Si hay un mensaje directo (tu caso actual)
                else if (!string.IsNullOrEmpty(response.Message))
                {
                    ToastService.ShowError(response.Message ?? "Error al eliminar.");
                }
                // Opción C: Fallback
                else
                {
                    ToastService.ShowError("No se pudo eliminar el registro.");
                }

                // Para depurar: Ver en la consola del navegador (F12)
                Console.WriteLine($"Error capturado: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error de conexión: " + ex.Message;
        }
        finally
        {
            isLoading = false;
            // 3. ¡VITAL! Forzar a Blazor a repintar la pantalla para mostrar la alerta roja
            StateHasChanged();
        }
    }

    private string ObtenerClaseRol(string rol)
    {
        return rol switch
        {
            "Director" => "bg-primary",
            "Maestro" => "bg-info text-dark",
            "Padre" => "bg-warning text-dark",
            "Alumno" => "bg-success",
            _ => "bg-secondary"
        };
    }
}