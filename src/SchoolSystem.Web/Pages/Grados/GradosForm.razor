@page "/grados/crear"
@page "/grados/editar/{Id:int}"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@inject GradoService GradoService
@inject NavigationManager Navigation
@inject ToastService ToastService
@attribute [Authorize]

<div class="container mt-4 mb-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@(Id == 0 ? "Nuevo Grado" : "Editar Grado")</h4>
            <a href="grados" class="btn btn-outline-light btn-sm">Volver</a>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
               <div class="text-center py-4">
                    <div class="spinner-border text-primary"></div>
                    <p>Cargando información...</p>
                </div>
            }
            else
            {
                <EditForm Model="@modelo" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label>Nivel Educativo</label>
                            <!-- Aquí harcodeamos los niveles por ahora, luego puedes cargar un catálogo -->
                            <InputSelect class="form-select" @bind-Value="modelo.NivelEducativoId">
                                <option value="1">Preescolar</option>
                                <option value="2">Primaria</option>
                                <option value="3">Secundaria</option>
                                <option value="4">Preparatoria</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => modelo.NivelEducativoId)" />
                        </div>

                        <div class="col-md-6">
                            <label>Nombre del Grado</label>
                            <InputText class="form-control" @bind-Value="modelo.Nombre" placeholder="Ej: 1°" />
                            <ValidationMessage For="@(() => modelo.Nombre)" />
                        </div>

                        <div class="col-md-4">
                            <label>Orden</label>
                            <InputNumber class="form-control" @bind-Value="modelo.Orden" />
                        </div>

                        <div class="col-md-4">
                            <label>Edad Recomendada</label>
                            <InputNumber class="form-control" @bind-Value="modelo.EdadRecomendada" />
                        </div>

                        <div class="col-md-4">
                            <label>Capacidad Grupo</label>
                            <InputNumber class="form-control" @bind-Value="modelo.CapacidadMaximaPorGrupo" />
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <a href="grados" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success" disabled="@isSubmitting">Guardar
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm"></span> <span>Guardando...</span>
                            }
                            else
                            {
                                <span><i class="oi oi-check"></i> Guardar</span>
                            }
                        </button>
                </div>
            </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private CreateGradoDto modelo = new CreateGradoDto { NivelEducativoId = 2, Orden = 1, CapacidadMaximaPorGrupo = 30 }; // Defaults
    private bool isLoading = false, isSubmitting = false;


    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            isLoading = true;
            var response = await GradoService.GetByIdAsync(Id);

            if (response.Succeeded)
            {
                var g = response.Data;
                modelo.Nombre = g.Nombre;
                // Asumimos que el backend devuelve el ID del nivel o lo inferimos
                modelo.NivelEducativoId = 1; // Ajustar si el DTO de lectura trae el ID
                modelo.Orden = g.Orden;
                // Otros campos...
            }
            isLoading = false;
        }
    }

    private async Task Guardar()
    {
        bool exito = false;
        isSubmitting = true;

        try
        {
            if (Id == 0)
            {
                var response = await GradoService.CreateAsync(modelo);
                exito = response.Succeeded;
                if (!exito)
                    ToastService.ShowError(response.Message);
            }
            else
            {
                var updateDto = new UpdateGradoDto
                    {
                        Id = this.Id,
                        Nombre = modelo.Nombre,
                        NivelEducativoId = modelo.NivelEducativoId,
                        Orden = modelo.Orden,
                        Activo = true,
                        EdadRecomendada = modelo.EdadRecomendada,
                        CapacidadMaximaPorGrupo = modelo.CapacidadMaximaPorGrupo
                    };
                var response = await GradoService.UpdateAsync(Id, updateDto);
                exito = response.Succeeded;
                if (!exito)
                    ToastService.ShowError(response.Message);
            }

            if (exito)
            {
                ToastService.ShowSuccess(Id == 0 ? "Grado creada." : "Grado actualizada.");
                Navigation.NavigateTo("grados");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error: " + ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}