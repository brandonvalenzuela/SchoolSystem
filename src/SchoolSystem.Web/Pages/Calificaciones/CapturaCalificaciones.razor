            // PASO 5: Mejorar manejo de 409 Conflict en GuardarCalificaciones
            private async Task ManejarRespuestaGuardado(ApiResponse<CalificacionMasivaResultadoDto> resp)
            {
                if (!resp.Succeeded)
                {
                    // AUDITOR√çA: Detectar error por motivo requerido
                    var esErrorMotivo = resp.Message != null && 
                                resp.Message.Contains("motivo", StringComparison.OrdinalIgnoreCase);

                            if (esErrorMotivo)
                            {
                                ToastService.ShowError("‚ùå El motivo de recalificaci√≥n es requerido. Abre el di√°logo nuevamente e indica un motivo.");
                                return;
                            }

                                // ‚úÖ PASO 5C: Detectar 409 Conflict (concurrencia robusta)
                                if (resp.StatusCode == 409)
                                {
                                    ToastService.ShowError("‚ùå Otro usuario calific√≥ al mismo tiempo. Recarga la lista y vuelve a intentar.");

                                    // Abre dialog de concurrencia con opciones
                                    var parameters = new DialogParameters<ConcurrenciaMasivaDialog>();
                                    var options = new DialogOptions
                                    {
                                        CloseOnEscapeKey = false,
                                        CloseButton = false,
                                        MaxWidth = MaxWidth.Small,
                                        FullWidth = true
                                    };

                                    var dialog = await DialogService.ShowAsync<ConcurrenciaMasivaDialog>(
                                        "Conflicto de Concurrencia", parameters, options);

                                    var result = await dialog.Result;

                                    if (!result.Canceled)
                                    {
                                        var decision = (string)result.Data ?? "cancelar";

                                        switch (decision)
                                        {
                                            case "recargar":
                                                // Recargar estado (precheck + marcar filas)
                                                ToastService.ShowInfo("Recargando estado del servidor...");
                                                await AplicarPrecheckExistentesAsync(mostrarToast: true);
                                                // Mostrar bot√≥n recargar alumnos
                                                _mostrarBotonRecargarAlumnos = true;
                                                break;

                                            case "reintentar":
                                                // Reintentar guardar respetando decisi√≥n actual
                                                ToastService.ShowInfo("Reintentando guardar...");
                                                modelo.SoloValidar = false;
                                                await GuardarCalificaciones();
                                                break;

                                            case "cancelar":
                                            default:
                                                ToastService.ShowInfo("Operaci√≥n cancelada. Verifica tus cambios e intenta de nuevo.");
                                                _mostrarBotonRecargarAlumnos = true;
                                                break;
                                        }
                                    }
                                    return;
                                }

                                // PASO 5: Detectar error por concurrencia/duplicados (heur√≠stica con mensaje)
                                var esConflictoConcurrencia = resp.Message != null && 
                                    (resp.Message.Contains("Conflicto", StringComparison.OrdinalIgnoreCase) ||
                                     resp.Message.Contains("ya fueron capturadas", StringComparison.OrdinalIgnoreCase) ||
                                     resp.Message.Contains("duplicate", StringComparison.OrdinalIgnoreCase) ||
                                     resp.Message.Contains("unique", StringComparison.OrdinalIgnoreCase) ||
                                     resp.Message.Contains("concurrencia", StringComparison.OrdinalIgnoreCase));

                                if (esConflictoConcurrencia)
                                {
                                    ToastService.ShowWarning("‚ö†Ô∏è Otro usuario ya captur√≥ algunas calificaciones. Actualizando lista‚Ä¶");

                                    // Ejecutar precheck fresco autom√°ticamente
                                    await AplicarPrecheckExistentesAsync(mostrarToast: false);

                                    // Mostrar alert de conflicto permanente
                                    _mostrarAlertaConflictoGuardado = true;

                                    // Mostrar feedback adicional
                                    ToastService.ShowInfo("Se actualiz√≥ la lista. Revisa los cambios y reintenta si es necesario.");

                                    // Mostrar bot√≥n recargar alumnos
                                    _mostrarBotonRecargarAlumnos = true;

                                    return;
                                }

                                ToastService.ShowError(resp.Message ?? "No se pudo guardar.");
                            }
            }
        }
