@page "/alumnos"
@using SchoolSystem.Web.Models
@using SchoolSystem.Web.Services
@using SchoolSystem.Web.Services.Toast
@attribute [Authorize]
@inject AlumnoService AlumnoService
@inject UiService UiService
@inject ToastService ToastService

<PageTitle>Alumnos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Listado de Alumnos</h1>
    <a href="alumnos/crear" class="btn btn-primary">
        <i class="oi oi-plus"></i> Nuevo Alumno
    </a>
</div>

<div class="card mb-3 shadow-sm border-0">
    <div class="card-body p-2">
        <div class="row g-2">
            <!-- Buscador -->
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        @if (isSearching)
                        {
                            <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        }
                        else
                        {
                            <i class="oi oi-magnifying-glass text-muted"></i>
                        }
                    </span>

                    <input type="text"
                           class="form-control border-start-0"
                           placeholder="Buscar por nombre, apellidos o matrícula..."
                           @bind-value="terminoBusqueda"
                           @bind-value:event="oninput"
                           @onkeyup="ReiniciarTimerBusqueda" />

                    @if (!string.IsNullOrEmpty(terminoBusqueda))
                    {
                        <button class="btn btn-outline-secondary border-start-0"
                                type="button"
                                @onclick="LimpiarFiltros"
                                title="Borrar búsqueda">
                            <i class="oi oi-x"></i>
                        </button>
                    }
                </div>
            </div>

            <!-- Filtro Estatus -->
            <div class="col-md-3">
                <select class="form-select" value="@filtroEstatus" @onchange="OnEstatusChanged">
                    <option value="">Todos los Estatus</option>
                    <option value="Activo">Activos</option>
                    <option value="Baja">Baja</option>
                    <option value="Egresado">Egresados</option>
                </select>
            </div>

            <!-- Botón Limpiar -->
            <div class="col-md-3 text-end">
                @if (!string.IsNullOrEmpty(terminoBusqueda) || !string.IsNullOrEmpty(filtroEstatus))
                {
                    <button class="btn btn-outline-secondary w-100" @onclick="LimpiarFiltros">
                        <i class="oi oi-x"></i> Limpiar Filtros
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-white bg-opacity-75 d-flex justify-content-center align-items-center"
         style="z-index: 10;">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (alumnos == null || !alumnos.Any())
{
    <div class="alert alert-info">No hay alumnos registrados.</div>
}
else
{
    <div class="table-responsive bg-white shadow-sm rounded @(isLoading ? "opacity-50" : "")">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Matrícula</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Estatus</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in alumnos)
                {
                    <tr>
                        <td>@alumno.Matricula</td>
                        <td>@alumno.NombreCompleto</td>
                        <td>@alumno.Email</td>
                        <td>
                            <span class="badge @ObtenerClaseEstatus(alumno.Estatus)">
                                @alumno.Estatus
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="alumnos/editar/@alumno.Id" class="btn btn-sm btn-outline-info me-1" title="Editar">
                                ✏️
                            </a>
                            <button class="btn btn-sm btn-outline-danger"
                                    title="Eliminar"
                                    @onclick="() => SolicitarEliminacion(alumno.Id, alumno.NombreCompleto)">
                                🗑️
                            </button>
                            <a href="alumnos/expediente/@alumno.Id" class="btn btn-sm btn-outline-danger me-1" title="Salud">
                                ❤️
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <span>Mostrando página @currentPage de @totalPages</span>
        <div>
            <button class="btn btn-outline-secondary btn-sm"
                    disabled="@(!hasPrevious)"
                    @onclick="() => CargarAlumnos(currentPage - 1)">
                Anterior
            </button>
            <button class="btn btn-outline-secondary btn-sm"
                    disabled="@(!hasNext)"
                    @onclick="() => CargarAlumnos(currentPage + 1)">
                Siguiente
            </button>
        </div>
    </div>


    <!-- Contador de resultados (Debajo de la tabla o arriba) -->
    @if (!isLoading && alumnos != null)
    {
        <div class="text-muted small mt-2 ms-1">
            <i class="oi oi-info"></i> Se encontraron <strong>@totalItems</strong> resultados.
        </div>
    }
}

<SchoolSystem.Web.Shared.ConfirmacionModal @ref="modalEliminar"
                                           Titulo="Eliminar Alumno"
                                           Mensaje="@mensajeConfirmacion"
                                           OnConfirm="ConfirmarEliminacionReal" />

@code {
    private string terminoBusqueda = "";
    private System.Threading.Timer? timerBusqueda;
    private string filtroEstatus = ""; // Vacío = Todos
    private bool isSearching = false;
    private int totalItems = 0; // <--- FALTABA ESTA


    // Timer para "Debounce" (esperar a que el usuario termine de escribir)

    private List<AlumnoDto> alumnos;
    private bool isLoading = true;
    private string errorMessage;

    // Variables de paginación
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 0;
    private bool hasPrevious;
    private bool hasNext;
    private string? successMessage;
    private SchoolSystem.Web.Shared.ConfirmacionModal modalEliminar;
    private int idParaEliminar;
    private string mensajeConfirmacion;


    protected override async Task OnInitializedAsync()
    {

        if (UiService.HasMessage)
            ToastService.ShowSuccess(UiService.GetSuccessMessage());

        await CargarAlumnos(1);
    }

    private async Task CargarAlumnos(int page)
    {
        isLoading = true;
        try
        {
            var response = await AlumnoService.GetAlumnosAsync(page, pageSize, terminoBusqueda, filtroEstatus);
            if (response.Succeeded)
            {
                alumnos = response.Data.Items.ToList();
                currentPage = response.Data.PageNumber;
                totalPages = response.Data.TotalPages;
                totalItems = response.Data.TotalItems;
                hasPrevious = response.Data.HasPreviousPage;
                hasNext = response.Data.HasNextPage;
                errorMessage = null;
            }
            else
            {
                 ToastService.ShowError(response.Message ?? "No se pudieron cargar los alumnos.");
            }
        }
        catch (Exception ex)
        {
             ToastService.ShowError("Error de conexión: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    // 1. Este método se llama al dar clic en el botón de la tabla (Basurero)
    private void SolicitarEliminacion(int id, string nombre)
    {
        // Guardamos el ID en memoria temporalmente
        idParaEliminar = id;

        // Configuramos el mensaje
        mensajeConfirmacion = $"¿Realmente deseas eliminar al alumno {nombre}? Esta acción no se puede deshacer.";

        // Mostramos el modal
        modalEliminar.Show();
    }

    // 2. Este método se ejecuta SOLO si el usuario da clic en "Eliminar" en el modal
    private async Task ConfirmarEliminacionReal()
    {
        isLoading = true;
        try
        {
            var response = await AlumnoService.DeleteAsync(idParaEliminar);

            if (response.Succeeded)
            {
                // Asigna el mensaje directamente a la variable que usa tu HTML.
                ToastService.ShowSuccess("Alumno eliminado correctamente.");

                // Recargar la tabla
                await CargarAlumnos(currentPage);
            }
            else
            {
                ToastService.ShowError(response.Message ?? "No se pudo eliminar.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Error: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private string ObtenerClaseEstatus(string estatus)
    {
        return estatus switch
        {
            "Activo" => "bg-success",
            "Baja" => "bg-danger",
            "Egresado" => "bg-primary",
            _ => "bg-secondary"
        };
    }

    private async Task OnEstatusChanged(ChangeEventArgs e)
    {
        filtroEstatus = e.Value.ToString();
        await CargarAlumnos(1);
    }

    private async Task LimpiarFiltros()
    {
        terminoBusqueda = "";
        filtroEstatus = "";
        await CargarAlumnos(1);
    }

    private void ReiniciarTimerBusqueda()
    {
        // Activar indicador visual inmediato al teclear
        isSearching = true;
        StateHasChanged();

        // 1. Detener el timer anterior si existe
        timerBusqueda?.Dispose();
        // 2. Iniciar un nuevo timer de 500ms (Debounce)
        timerBusqueda = new System.Threading.Timer(async _ =>
        {
            // 3. Volver al hilo principal de Blazor para actualizar la UI
            await InvokeAsync(async () =>
            {
                // Resetear a página 1 cuando se busca
                currentPage = 1;
                await CargarAlumnos(currentPage);

                // Desactivar indicador al terminar
                isSearching = false;
                // Forzar repintado de la interfaz por si acaso
                StateHasChanged();
            });
        }, null, 500, System.Threading.Timeout.Infinite);
    }

}