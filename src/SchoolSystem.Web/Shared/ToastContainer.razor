@using SchoolSystem.Web.Services.Toast
@inject ToastService ToastService
@implements IDisposable

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    @foreach (var toast in ToastService.Toasts)
    {
        <div class="toast show align-items-center text-white border-0 mb-2 @GetBgClass(toast.Level)" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body d-flex align-items-center">
                    <i class="@GetIconClass(toast.Level) me-2 fs-5"></i>
                    <div>
                        <strong>@toast.Title</strong>
                        <div class="small">@toast.Message</div>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => ToastService.Remove(toast)" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        // Nos suscribimos al evento del servicio
        ToastService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        // Nos desuscribimos para evitar fugas de memoria
        ToastService.OnChange -= StateHasChanged;
    }

    private string GetBgClass(ToastLevel level) => level switch
    {
        ToastLevel.Success => "bg-success",
        ToastLevel.Error => "bg-danger",
        ToastLevel.Warning => "bg-warning text-dark", // Texto oscuro para amarillo
        ToastLevel.Info => "bg-info text-dark",
        _ => "bg-primary"
    };

    private string GetIconClass(ToastLevel level) => level switch
    {
        ToastLevel.Success => "oi oi-check",
        ToastLevel.Error => "oi oi-circle-x",
        ToastLevel.Warning => "oi oi-warning",
        ToastLevel.Info => "oi oi-info",
        _ => "oi oi-info"
    };
}